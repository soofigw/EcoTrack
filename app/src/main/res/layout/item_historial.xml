<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/item_icono"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_viaje"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/item_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Viaje en Auto (10.5 km)"
        android:textColor="@color/verde_principal_oscuro"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/item_icono"/>

    <TextView
        android:id="@+id/item_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31 de octubre, 2025"
        android:textSize="14sp"
        android:textColor="@color/azul_turquesa"
        android:layout_below="@id/item_titulo"
        android:layout_toEndOf="@id/item_icono"/>

    <TextView
        android:id="@+id/item_co2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1.8 kg CO2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/lila_oscuro"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>